{
  "name": "pakag",
  "description": "Format package.json contents when editing.",
  "version": "0.0.0-development",
  "repository": "github:tobua/pakag",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "dependencies": {
    "prettier": "^2.8.7",
    "sort-package-json": "^2.4.1"
  },
  "type": "module",
  "sideEffects": true,
  "main": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "source": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "devDependencies": {
    "padua": "^1.2.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!sort-object-keys|sort-package-json|detect-indent|detect-newline|is-plain-obj)"
    ]
  },
  "engines": {
    "node": ">= 16"
  }
}
