{
  "name": "pakag",
  "version": "1.1.0",
  "description": "Format package.json contents when editing.",
  "repository": "github:tobua/pakag",
  "type": "module",
  "main": "dist/index.js",
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "padua build",
    "lint": "padua lint",
    "release": "padua publish",
    "test": "padua test",
    "update": "padua update",
    "watch": "padua watch"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./node_modules/padua/configuration/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    }
  },
  "dependencies": {
    "prettier": "^2.1.1",
    "sort-package-json": "^1.44.0"
  },
  "devDependencies": {
    "padua": "^0.0.6"
  },
  "engines": {
    "node": ">= 13.2.0"
  }
}
